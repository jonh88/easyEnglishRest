<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="domain.Cuestionario" table="tbl_cuestionario">
		<id name="id" type="int">
			<column name="id"/>
			<generator class="increment" />
		</id>			
		
		<property name="fecha" type="int">
			<column name="fecha"/>
		</property>		
		<property name="preguntas" type="int">
			<column name="num_preguntas"/>
		</property>
		<property name="fallos" type="int">
			<column name="num_fallos"/>
		</property>
		
		<many-to-one name="user" class="domain.Usuario" column="Id_usr" not-null="true"/>
		
		 <!--
		<set name="preguntas" table="tbl_cuestionario_pregunta" cascade="all" inverse="true">
			<key>
				<column name="tbl_cuestionario_id"/>
			</key>
			<many-to-many column="tbl_pregunta_id" class="domain.Pregunta"/>
		</set>
		 -->
		
	</class>
</hibernate-mapping>